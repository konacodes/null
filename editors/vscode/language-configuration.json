{
    "comments": {
        "lineComment": "--",
        "blockComment": ["---", "---"]
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"],
        ["{", "}"]
    ],
    "autoClosingPairs": [
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "{", "close": "}"},
        {"open": "\"", "close": "\"", "notIn": ["string", "comment"]}
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["{", "}"],
        ["\"", "\""]
    ],
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(fn|if|elif|else|while|for|struct|@extern).*\\bdo\\s*$",
        "decreaseIndentPattern": "^\\s*(end|else|elif)\\b"
    },
    "folding": {
        "markers": {
            "start": "\\bdo\\b",
            "end": "\\bend\\b"
        }
    }
}
