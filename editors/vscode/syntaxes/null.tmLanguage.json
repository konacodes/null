{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "null",
    "scopeName": "source.null",
    "patterns": [
        {"include": "#comments"},
        {"include": "#directives"},
        {"include": "#keywords"},
        {"include": "#types"},
        {"include": "#strings"},
        {"include": "#numbers"},
        {"include": "#operators"},
        {"include": "#functions"},
        {"include": "#constants"}
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.null",
                    "begin": "---",
                    "end": "---"
                },
                {
                    "name": "comment.line.double-dash.null",
                    "match": "--.*$"
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "name": "keyword.control.directive.null",
                    "match": "@(use|extern|alloc|free|assert|debug)\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.null",
                    "match": "\\b(if|elif|else|while|for|in|match|ret|break|continue|do|end)\\b"
                },
                {
                    "name": "keyword.declaration.null",
                    "match": "\\b(fn|let|mut|const|struct)\\b"
                },
                {
                    "name": "keyword.operator.logical.null",
                    "match": "\\b(and|or|not|as)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.null",
                    "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|void)\\b"
                },
                {
                    "name": "storage.type.pointer.null",
                    "match": "\\bptr\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.null",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.null",
                            "match": "\\\\[nrt\\\\\"0]"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.null",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.null",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.null",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.arithmetic.null",
                    "match": "\\+|-|\\*|/|%"
                },
                {
                    "name": "keyword.operator.bitwise.null",
                    "match": "<<|>>|&|\\||\\^|~"
                },
                {
                    "name": "keyword.operator.assignment.null",
                    "match": "="
                },
                {
                    "name": "keyword.operator.arrow.null",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.type.null",
                    "match": "::"
                },
                {
                    "name": "keyword.operator.range.null",
                    "match": "\\.\\."
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.null",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.null",
                    "match": "\\b(true|false)\\b"
                }
            ]
        }
    }
}
